<% @messages.each do |message| %>
<div class="list-group-item">
  <div class="badge badge-primary mr-1"> 
    <%= message.username %>
  </div>
  <div>
    <%= message.content %>
  </div>  
</div>
<% end %>

<%= form_for [@room, Message.new] do |f| %>

  <%= f.text_field :username, placeholder: "Username" %>
  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>
